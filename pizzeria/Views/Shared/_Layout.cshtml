<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/Content/angular-material.css">
    

    @Styles.Render("~/Content/css")

</head>
<body ng-app="Pizzeria" layout="row" style="padding:0 !important">

    <div ng-controller="AppCtrl" layout="row" style="min-width:100%" ng-cloak>

        <div layout="row" style="height:auto; width:auto">

            <md-sidenav class="md-sidenav-left md-whiteframe-z2 hide-print md-closed ng-isolate-scope md-locked-open"
                        md-component-id="left"
                        md-is-locked-open="$mdMedia('gt-sm')"
                        tabindex="-1"
                        style="background-color:rgb(63,81,181);">

                <header class="navbar-header">
                    @Html.Partial("_Logo")
                </header>

                <md-content flex role="navigation" class="_md flex" style="background-color:rgb(63,81,181)">
                    @Html.Partial("_Menu")
                </md-content>

            </md-sidenav>

        </div>


        <div layout="column" tabindex="-1" role="main" flex="" class="layout-column flex">

            <md-toolbar class="md-whiteframe-glow-z1 site-content-toolbar _md _md-toolbar-transitions" style="background-color:darkgray">

                <div>
                    @Html.Partial("_Toolbar")
                    <md-button ng-click="toggleLeft()" class="md-raised">Menu</md-button>
                </div>

            </md-toolbar>

            <md-content md-scroll-y="" layout="column" flex="" class="_md layout-column flex">

                <div style="padding:15px">
                    @RenderBody()
                </div>

            </md-content>

        </div>

    </div>

        <!-- Angular Material requires Angular.js Libraries -->
        <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.5/angular.min.js"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.5/angular-animate.min.js"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.5/angular-aria.min.js"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.5/angular-messages.min.js"></script>
        
        
        <!-- Angular Material Library -->
        <script src="https://ajax.googleapis.com/ajax/libs/angular_material/1.1.0/angular-material.min.js"></script>

        <script src="~/Scripts/CustomScripts/CustomScript.js"></script>
        
        @RenderSection("scripts", required: false)      
        
</body>
</html>
